{{!
    @template mod_lesson/edit_action_buttons

    Actions panel for essay grading.

    Classes required for JS:
    * none

    Context variables required for this template:
    * see mod/lesson/classes/output/edit_action_buttons.php

    Example context (json):
    {
        "edit": {
            "button": {
                "id" : "id1",
                "method" : "get",
                "url" : "#",
                "formid": "1",
                "primary" : true,
                "tooltip" : "This is a tooltip",
                "label" : "Edit",
                "attributes": [
                    {
                      "name": "data-attribute",
                      "value": "yeah"
                    }
                ]
            }
        },
        "gradeessays": {
            "button": {
                "id" : "id2",
                "method" : "get",
                "url" : "#",
                "formid": "2",
                "primary" : false,
                "tooltip" : "This is a tooltip",
                "label" : "Grade essays",
                "attributes": [
                    {
                      "name": "data-attribute",
                      "value": "yeah"
                    }
                ]
            }
        }
    }

}}
<div class="container-fluid mb-2">
    <div class="row">
        {{#edit}}
            <div class="col-xs-6 pr-2">
                {{#button}}
                    {{>core/single_button}}
                {{/button}}
            </div>
        {{/edit}}
        {{#editcontents}}
            <div class="col-xs-6 pr-2">
                {{#button}}
                    {{>core/single_button}}
                {{/button}}
            </div>
        {{/editcontents}}
        {{#gradeessays}}
            <div class="col-xs-6">
                {{#button}}
                    {{>core/single_button}}
                {{/button}}
            </div>
        {{/gradeessays}}
    </div>
</div>
{{#notification}}
    {{> core/notification }}
{{/notification}}
