<h1 class="m-mod-autograder-title">{{body_title}}</h1>

<style>
    #plagiarism table {
        border-collapse: separate;
        border: solid black 1px;
        border-radius: 6px;
    }

    #plagiarism {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    #plagiarism td, #plagiarism th {
        border: 1px solid #ddd;
        padding: 8px;
    }

    #plagiarism tr:nth-child(even){background-color: #f6f6f6;}

    #plagiarism tr:hover {background-color: #ddd;}

    #plagiarism th {
        text-align: left;
        background-color: #FF7E00;
        color: white;
    }
</style>

<div style="margin: 20px auto auto 17.5%; width: 65%;">
    <table id="plagiarism" style="width: 100%">
        <tr>
            {{#col_names}}
                <th>{{.}}</th>
            {{/col_names}}
        </tr>
        {{#rows}}
            <tr>
                <td>
                    <a href="{{first_moodle_url}}">{{first_name}}</a>
                </td>
                <td>
                    <a href="{{match_url}}">{{first_file}}</a>
                </td>
                <td>{{first_percent}}</td>
                <td>
                    <a href="{{second_moodle_url}}">{{second_name}}</a>
                </td>
                <td>
                    <a href="{{match_url}}">{{second_file}}</a>
                </td>
                <td>{{second_percent}}</td>
                <td>{{lines}}</td>
            </tr>
        {{/rows}}
    </table>
</div>

