{{!
    @template enrol_lti/registered_deployments

    Template which displays a table view of all deployments attached to an app registration, with options to delete and
    add.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * hasdeployments
    * addurl

    Optional context variables for this template:
    * deployments

    Example context (json):
    {
        "hasdeployments": true,
        "deployments": [
            {
                "name": "Site level deployment of tool x in platform y",
                "id": "deploy-id-12345",
                "deleteurl": "https://example.org/enrol/lti/manage_deployments.php?action=delete&id=2&registrationid=1"
            }
        ],
        "addurl": "https://example.org/enrol/lti/manage_deployments.php?action=add"
    }
}}
<div id="lti_registered_deployments" class="mb-3">
<a class="btn btn-secondary mb-3" href="{{backurl}}">{{#str}}back, core{{/str}}</a>
{{#hasdeployments}}
<table class="admintable generaltable">
    <thead>
    <tr>
        <th>{{#str}}name, core{{/str}}</th>
        <th>{{#str}}deploymentid, enrol_lti{{/str}}</th>
        <th>{{#str}}actions, core{{/str}}</th>
    </tr>
    </thead>

    <tbody>
    {{#deployments}}
        <tr>
            <th>{{name}}</th>
            <td>{{deploymentid}}</td>
            <td>
                <a class="delete" href="{{deleteurl}}" title="{{#str}} delete {{/str}}">{{#pix}} t/delete, core, {{#str}} delete {{/str}}{{/pix}}</a>
            </td>
        </tr>
    {{/deployments}}
    </tbody>
</table>
{{/hasdeployments}}
{{^hasdeployments}}
    <div>
        {{#str}}nodeployments, enrol_lti{{/str}}
    </div>
    <br>
{{/hasdeployments}}
<div>
    <a class="btn btn-secondary" href="{{addurl}}">{{#str}}deploymentadd, enrol_lti{{/str}}</a>
</div>
</div>
