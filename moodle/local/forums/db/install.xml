<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/forums/db" VERSION="20130407" COMMENT="XMLDB file for forums plugin"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <!--A table for forum discussion informations-->
        <TABLE NAME="local_forums" COMMENT="Each record leads to forums discussion">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="course_short_name" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="course_full_name" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="user_firstname" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="user_lastname" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="title_of_forum" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="description" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="time_created" TYPE="datetime" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="time_modified" TYPE="datetime" NOTNULL="true" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>
        <!--A table for whether a discussion is reached or not-->
        <TABLE NAME="local_forums_reached" COMMENT="Each record is a user record of reaching a forum discussion">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="course_id" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="timeread" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>
        <!--A new table for answers on forums-->
        <TABLE NAME="local_forums_answers" COMMENT="Each record is a users answer/interaction in the forum discussion">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="course_id" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="answer" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="time_created" TYPE="datetime" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="time_modified" TYPE="datetime" NOTNULL="true" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>