<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/archive/db" VERSION="20130407" COMMENT="XMLDB file for local archives plugin"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <TABLE NAME="local_archive" COMMENT="Each record leads to an archive record">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="user_name" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="user_lastname" SEQUENCE="false" TYPE="text" NOTNULL="true"/>
                <FIELD NAME="course_short_name" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="course_full_name" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="record_type" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="date_of_the_record" TYPE="int" LENGTH="10" DEFAULT="0" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="time_created" TYPE="datetime" NOTNULL="true" DEFAULT="CURRENT_TIMESTAMP" SEQUENCE="false"/>
                <FIELD NAME="time_modified" TYPE="datetime" NOTNULL="true" DEFAULT="CURRENT_TIMESTAMP" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>
        <TABLE NAME="local_archive_reached" COMMENT="Each record is a user record of reaching an archive record">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="course_id" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="timeread" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>